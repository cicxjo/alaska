<Files "config.ini">
    Require all denied
</Files>

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond $1 !^(index\.php)$
RewriteRule ^(.+?)/([0-9]+)/?$ index.php?action=$1&id=$2 [QSA,L]
RewriteRule ^(.*[^/]+)/?$  index.php?action=$1 [QSA,L]
RewriteRule ^(.*)/?$  index.php?action=$1 [QSA,L]

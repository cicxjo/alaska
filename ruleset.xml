<?xml version="1.0"?>
<ruleset>

    <arg name="extensions" value="php"/>
    <arg name="report" value="emacs"/>

    <rule ref="PSR2"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="80"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

</ruleset>

